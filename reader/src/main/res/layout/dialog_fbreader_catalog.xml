<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/id_dialog_fbreader_catalog_book_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/id_dialog_fbreader_catalog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#33ffffff"
            android:paddingBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="24sp"
            tools:text="平凡的世界" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_dialog_fbreader_catalog_menu_catalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingLeft="17dp"
            android:paddingTop="12dp"
            android:text="@string/fbreader_menu_catalogue"
            android:textColor="@color/color_fbreader_menu_selected_day"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_dialog_fbreader_catalog_menu_book_mark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/fbreader_bookmark"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/id_dialog_fbreader_catalog_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_dialog_fbreader_catalog_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>