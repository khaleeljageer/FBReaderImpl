<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_fragment_fbreader_catalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/id_fragment_fbreader_catalog_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/id_fragment_fbreader_catalog_empty_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_fbreader_catalog_empty_day" />

        <TextView
            android:id="@+id/id_fragment_fbreader_catalog_empty_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="暂时还没有书签"
            android:textColor="#cccccc"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>